doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Webflix
        block stylesheet
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        link(href="/css/main.css" rel="stylesheet")
    body
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            .container
                a.navbar-brand(href="/")
                    img(src="/logo.png" alt="WebFlix" width="60" height="50") 
                
                .collapse.navbar-collapse#navbarNavDropdown
                    ul.navbar-nav
                        li.nav-item
                        a.nav-link.active(aria-current="page" href="/") Accueil
                        if username    
                            li.nav-item
                            a.nav-link.active(aria-current="page" href="/deconnexion") Se d√©connecter
                            li.nav-item
                            a.nav-link.active(aria-current="page" href="/qrcode") Profil                     
                        else
                            li.nav-item
                            a.nav-link.active(aria-current="page" href="/connexion") Connexion
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                                | Themes
                            ul.dropdown-menu
                                li
                                a.dropdown-item(href="#" data-theme="light") Light
                                li
                                a.dropdown-item(href="#" data-theme="dark") Dark
       
        - var messages = getMessages()
        if messages.notify
            each msg in messages.notify
                .alert.alert-info= msg
        if messages.error
            each msg in messages.error
                .alert.alert-danger= msg
        block content
            


    script(src=process.env.BROWSER_REFRESH_URL)
    script(src="/assets/js/main.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")